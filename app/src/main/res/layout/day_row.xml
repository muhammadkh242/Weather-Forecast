<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="40dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dayTxt"
            android:text="Sat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/stateIcon"
            app:layout_constraintStart_toEndOf="@id/dayTxt"
            app:layout_constraintTop_toTopOf="@id/dayTxt"
            app:layout_constraintBottom_toBottomOf="@id/dayTxt"
            android:layout_marginStart="50dp"
            android:src="@drawable/cloud"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/stateTxt"
            app:layout_constraintStart_toEndOf="@id/stateIcon"
            app:layout_constraintTop_toTopOf="@id/stateIcon"
            app:layout_constraintBottom_toBottomOf="@id/stateIcon"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:text="Snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dayTempTxt"
            app:layout_constraintTop_toTopOf="@id/stateTxt"
            app:layout_constraintBottom_toBottomOf="@id/stateTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:text="25c"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>