<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"

    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/blue_300"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dayTxt"
            android:text="Sat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:textSize="15dp"
            android:textColor="#253DA1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dayStateIcon"
            app:layout_constraintStart_toEndOf="@id/dayTxt"
            app:layout_constraintTop_toTopOf="@id/dayTxt"
            app:layout_constraintBottom_toBottomOf="@id/dayTxt"
            android:layout_marginStart="20dp"
            android:src="@drawable/cloud"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/dayDescTxt"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/dayStateIcon"
            app:layout_constraintTop_toTopOf="@id/dayStateIcon"
            app:layout_constraintBottom_toBottomOf="@id/dayStateIcon"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="Snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dayTempTxt"
            app:layout_constraintTop_toTopOf="@id/dayDescTxt"
            app:layout_constraintBottom_toBottomOf="@id/dayDescTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:textColor="#253DA1"

            android:text="25c"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>