<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="settingsPref"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Notifications">
        <SwitchPreference
            android:key="notifications"
            android:title="Notifications"
            android:defaultValue="true"
            android:summary="allow notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Location">
            <ListPreference
                android:key="location"
                android:title="Location"
                android:defaultValue="GPS"
                android:entryValues="@array/locationValues"
                android:entries="@array/locationEntries"
                android:summary="%s"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Units">
            <ListPreference
                android:key="unit_system"
                android:title="Unit System"
                android:summary="%s"
                android:defaultValue="METRIC"
                android:entries="@array/unitSystemEntries"
                android:entryValues="@array/unitSystemValues"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="Languages">
        <ListPreference
            android:key="language"
            android:title="Language"
            android:summary="%s"
            android:defaultValue="en"
            android:entries="@array/languageEntries"
            android:entryValues="@array/languageValues"/>

    </PreferenceCategory>

</PreferenceScreen>